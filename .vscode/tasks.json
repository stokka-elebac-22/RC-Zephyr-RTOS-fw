{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CleanAndBuild",
            "type": "shell",
            "command": "./build.bat",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/build"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
        {
            "label": "Build",
            "type": "shell",
            "command": "west build",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/build"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}